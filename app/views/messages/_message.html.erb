<% if message.role == "user" %>
  <div class="flex justify-end">
    <div class="max-w-[75%] bg-[#AEEAD1] px-4 py-2 rounded-xl shadow">
      <%= raw(render_markdown(message.content)) %>
    </div>
</div>

<% elsif message.role == "assistant" %>
  <div class="flex justify-start" id="<%= dom_id(message) %>">
    <div class="max-w-[75%] bg-white text-[#06231B] px-4 py-2 rounded-xl border border-[#E6ECEA] shadow-sm">
      <%= message.content.present? ? raw(render_markdown(message.content)) : "..." %>
    </div>
  </div>
<% end %>
