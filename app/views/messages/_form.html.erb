<%# Chatbox Form  %>
<%= form_with model: [chat, message], method: :post, 
  html: { class: "flex items-center gap-3 w-full" } do |f| %>

  <%= f.text_area :content,
    rows: 2,
    placeholder: "Ask anything...", 
    required: true,
    class: "flex-1 resize-none px-4 py-3 bg-white border border-[#E6ECEA] rounded-xl 
              focus:outline-none focus:ring-2 focus:ring-[#21A179] text-[#06231B] shadow-sm" %> 

  <%= f.submit "Send", 
    class: "bg-[#21A179] text-white px-5 py-3 rounded-full font-semibold 
                hover:bg-[#1b8a67] transition active:scale-95" %>

<%end%>
